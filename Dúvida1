import matplotlib.pyplot as plt
n_mat=['Matemática',8,7,6,6,7,7,8,10]
n_por=['Português',9,9,9,8,5,6,8,5]
n_geo=['Geografia',10,10,6,7,7,7,8,7]

notas=[n_mat, n_por, n_geo]

for nota in notas:
  x=list(range(1,9))
  y = notas[1:]
   plt.plot(x, y, marker='o')
  plt.title('Notas das matérias')
  plt.xlabel('Provas')
  plt.ylabel('Notas')
  plt.show()
